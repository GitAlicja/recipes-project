<form action="/recipes/{{_id}}/edit" method="post">

<ul>
  <li><label for="name-input">Name:</label>
  <input type="text" name="name" id="name-input" value ="{{name}}" /> </li>

 <li> <label for="instructions-input">Instructions:</label>
  <textarea name="instructions" id="instructions-input" cols="30" rows="4">{{instructions}} </textarea>/></li> 

 <li><label for="source-input">Source:</label>
  <input type="text" name="URL" id="source-input" value ="{{URL}}" /></li> 

