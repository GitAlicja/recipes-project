{{> navigationalBar}}

<div class="main-recipe-container">
  <h2 class="pl-3 mb-3">Your Shopping List</h2>

  {{#each shoppingList}}
  <div class="container">
    <div class="p-3 mb-2 bg-light text-dark">
      <h3 class="mb-3">{{this.name}}</h3>
      <p>
        <b>Ingredients:</b>
      <ul>
        {{#each this.ingredients}}
        <li>{{this}}</li>
        {{/each}}
      </ul>
      </p>

      <form action="/user/shopping-list/{{this._id}}/delete-from-list" method="POST">
        <button class="btn btn-primary">Delete</button>
      </form>
    </div>
  </div>
  {{/each}}

  <form action="/user/shopping-list/delete-all-from-list" method="POST" class="pl-3">
    <button class="btn btn-primary">Delete All</button>
  </form>
</div>

{{> footer}}