{{> navigationalBar}}
<div>
  <h2>My bookmarks</h2>
  <br>
  <form action="/user/bookmarks" method="GET">
    <input type="text" name="query" placeholder="Search my bookmarks" value="{{this.query}}">
    <button type="submit" id="search-button">Search</button>
  </form>
  <div class="recipes">

    <div class="row justify-content-center">
      <div class="wrapper">
        {{!-- {{#if this.recipes}} --}}
        {{#each this.user.bookmarkedRecipes}}
        <div class="class=â€œcard-deck col-lg-4 col-sm-12 col-md-5 text-center">
          <div class="card mt-5">
            <img class="card-img-top" src="{{#if this.recipeImage}} {{this.recipeImage}}{{else}}/images/food.jpg{{/if}}"
              alt="Card image cap">
            <div class="card-body-recipes">
              <h5 class="card-title">{{this.name}}</h5>
              <a href="/recipes/{{this._id}}" class="btn btn-primary"> Go to Recipe</a>
            </div>

          </div>
        </div>
        {{/each}}

      </div>

    </div>
  </div>