{{> navigationalBar}}

<h2>Edit your profile</h2>

<form action="/user/profile/edit" method="POST" enctype="multipart/form-data">

  <label for="input-username">Username</label>
  <input type="text" id="input-username" name="username" value="{{this.username}}" />

  <label for="input-email">Email</label>
  <input type="email" id="input-email" name="email" value="{{this.email}}" />

  <br>
  <label for="input-file">Profile Picture</label>
  <input type="file" name="image" id="input-file" />

  <button class="save-button" type="submit">UPDATE</button>

  {{#if errorMessage}}
  <p>{{errorMessage}}</p>
  {{/if}}
</form>