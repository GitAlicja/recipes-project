{{> navigationalBar}}

<div class="main-recipe-container">
  <h2 class="form-header">Edit your profile</h2>

  <form action="/user/profile/edit" method="POST" enctype="multipart/form-data">
    <div class="form-group">
      <label for="input-username">Username</label>
      <input type="text" class="form-control" id="input-username" name="username" value="{{this.username}}" />
    </div>

    <div class="form-group">
      <label for="input-email">Email</label>
      <input type="text" class="form-control" id="input-email" name="username" value="{{this.email}}" />
    </div>

    <div class="form-group">
      <label for="input-file">Profile Picture</label>
      <br>
      <input type="file" name="image" id="input-file" />
    </div>

    <button class="btn btn-primary btn-sm" type="submit">Update</button>

    {{#if errorMessage}}
    <p>{{errorMessage}}</p>
    {{/if}}

  </form>
</div>
